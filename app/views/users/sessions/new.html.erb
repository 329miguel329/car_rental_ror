<div class="card card-login mx-auto mt-5">
  <div class="card-header">Login</div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
      <div class="form-group row">
        <div class="col-sm-12">
          <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t("activerecord.attributes.users.email"), required: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-12">
          <%= form.password_field :password, autofocus: true, autocomplete: "password", class: "form-control", placeholder: t("activerecord.attributes.users.password"), required: true %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= form.check_box :remember_me %>
          <%= form.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= form.submit "Sign up", class: "btn btn-success btn-block" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
