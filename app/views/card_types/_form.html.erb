<%= form_with(model: card_type, local: true) do |form| %>
  <%= render "partials/errorscontent", object: @card_type %>

  <div class="form-group row">
    <%= form.label "#{t("activerecord.attributes.card_types.code")} *", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :code, class: "form-control", placeholder: t("activerecord.attributes.card_types.code"), required: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label "#{t("activerecord.attributes.card_types.name")} *", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control", placeholder: t("activerecord.attributes.card_types.name"), required: true %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Send', :class => "btn btn-success btn-block" %>
  </div>
  <hr>
<% end %>
