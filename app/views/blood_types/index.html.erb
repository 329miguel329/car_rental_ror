<h1><%= t("activerecord.models.blood_type", :count => 2) %></h1>

<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-table"></i>
    <%= t("gui.messages.blood_types.index") %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th><%= t("activerecord.attributes.blood_types.code") %></th>
            <th><%= t("activerecord.attributes.blood_types.name") %></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @blood_types.each do |blood_type| %>
            <tr>
              <td><%= blood_type.code %></td>
              <td><%= blood_type.name %></td>
              <td><%= link_to t("gui.actions.show"), blood_type %></td>
              <td><%= link_to t("gui.actions.edit"), edit_blood_type_path(blood_type) %></td>
              <td>
                <%= link_to t("gui.actions.destroy"), blood_type, method: :delete, data: {
                  confirm: t('gui.messages.confirm.destroy.title'),
                  'confirm-button-text': t('gui.messages.confirm.destroy.textConfirm'),
                  'cancel-button-text': t('gui.messages.confirm.destroy.textCancel'),
                  text: t('gui.messages.confirm.destroy.text')
                } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer small text-muted"></div>
</div>

<br>

<%= link_to new_blood_type_path, class: "btn btn-success" do %>
  <i class="fa fa-plus-square"></i>&nbsp;&nbsp;<%= "#{t("gui.actions.new")} #{t("activerecord.models.blood_type", count: 1)}" %>
<% end %>

<script type="text/javascript">
  $(document).ready(function() {
    $('#dataTable').DataTable();
  });
</script>